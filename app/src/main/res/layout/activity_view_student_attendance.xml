<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title or Header -->
    <TextView
        android:id="@+id/tvStudentAttendanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Attendance Records"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <!-- Progress Bar (optional, for loading data) -->
    <ProgressBar
        android:id="@+id/progressBarStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#6200EE" />

    <!-- List View for Student Attendance Records -->
    <ListView
        android:id="@+id/lvStudentAttendanceRecords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF" />
</LinearLayout>
